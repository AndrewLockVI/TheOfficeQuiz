<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".SettingScreen"
    android:background="@drawable/gradient_blue_2"
    >



    <androidx.cardview.widget.CardView
        android:layout_width="0dp"
        android:id="@+id/cardTop"
        android:layout_height="0dp"
        app:layout_constraintTop_toTopOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintWidth_percent=".7"
        app:layout_constraintHeight_percent=".12"
        android:layout_marginTop="30dp"
        app:cardCornerRadius="100dp"
        android:backgroundTint="#FF72C6ED"
        android:alpha=".9"
        >

    </androidx.cardview.widget.CardView>

    <TextView
        android:layout_width="0dp"
        android:layout_height="0dp"
        app:layout_constraintTop_toTopOf="@id/cardTop"
        app:layout_constraintStart_toStartOf="@id/cardTop"
        app:layout_constraintEnd_toEndOf="@id/cardTop"
        app:layout_constraintBottom_toBottomOf="@id/cardTop"
        android:text="Contact"
        app:layout_constraintWidth_percent=".5"
        app:layout_constraintHeight_percent=".07"
        android:elevation="10dp"
        android:fontFamily="@font/nunito_sans"
        android:textColor="@color/white"
        android:textAlignment="center"
        android:autoSizeTextType="uniform"

        />


    <androidx.cardview.widget.CardView
        android:id="@+id/cardContain"
        android:layout_marginTop="45dp"
        android:layout_width="0dp"
        android:layout_height="0dp"
        app:cardCornerRadius="50dp"
        app:layout_constraintTop_toBottomOf="@id/cardTop"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintHeight_percent=".7"
        app:layout_constraintWidth_percent=".9"

        >

    </androidx.cardview.widget.CardView>







    <Button
        android:layout_width="55dp"
        android:layout_height="55dp"
        android:layout_marginLeft="30dp"
        android:id="@+id/backArrow"
        android:layout_marginTop="30dp"
        app:layout_constraintTop_toTopOf="@id/cardContain"
        app:layout_constraintStart_toStartOf="@id/cardContain"
        android:background="@drawable/back_arrow"
        app:layout_constraintWidth_percent=".25"
        app:layout_constraintHeight_percent=".07"
        android:alpha=".6"
        android:backgroundTint="@color/black"

        >

    </Button>



    <TextView
        android:layout_width="0dp"
        android:layout_height="0dp"
        android:id="@+id/inquirytxt"
        app:layout_constraintTop_toBottomOf="@id/backArrow"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintHeight_percent=".09"
        android:autoSizeMaxTextSize="20dp"
        android:autoSizeMinTextSize="5dp"
        android:elevation="30dp"
        app:layout_constraintWidth_percent=".7"
        app:layout_constraintEnd_toEndOf="parent"
        android:autoSizeTextType="uniform"
        android:layout_marginTop="10dp"
        android:textColor="@color/white"
        android:fontFamily="@font/nunito_sans_bold"
        android:background="@drawable/gradient_blue_2"
        android:textAlignment="center"
        android:text="For Official Inquiries and Bug Reports:"

        />

    <TextView
        android:layout_width="0dp"
        android:layout_height="0dp"
        android:id="@+id/emailText"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintHeight_percent=".05"
        android:autoSizeMaxTextSize="25dp"
        android:autoSizeMinTextSize="5dp"
        android:elevation="30dp"
        app:layout_constraintWidth_percent=".7"
        android:layout_marginEnd="40dp"
        android:autoSizeTextType="uniform"
        android:layout_marginTop="15dp"
        android:fontFamily="@font/nunito_sans"
        android:textAlignment="viewStart"
        android:layout_marginStart="40dp"
        android:text="Email"
        app:layout_constraintTop_toBottomOf="@id/inquirytxt"
        app:layout_constraintEnd_toEndOf="parent"
        />

    <TextView
        android:layout_width="0dp"
        android:layout_height="0dp"
        android:id="@+id/emailtxt"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintHeight_percent=".05"
        android:autoSizeMaxTextSize="23dp"
        android:autoSizeMinTextSize="5dp"
        android:elevation="30dp"
        android:maxLines="1"
        app:layout_constraintWidth_percent=".7"
        android:layout_marginEnd="40dp"
        android:autoSizeTextType="uniform"
        android:fontFamily="@font/nunito_sans"
        android:textAlignment="viewStart"
        android:layout_marginStart="40dp"
        android:text="andrewlaack1@gmail.com"
        app:layout_constraintTop_toBottomOf="@id/emailText"
        app:layout_constraintEnd_toEndOf="parent"
        />
    <TextView
        android:layout_width="0dp"
        android:layout_height="0dp"
        android:id="@+id/yttxt"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintHeight_percent=".05"
        android:autoSizeMaxTextSize="25dp"
        android:autoSizeMinTextSize="5dp"
        android:elevation="30dp"
        app:layout_constraintWidth_percent=".7"
        android:layout_marginEnd="40dp"
        android:autoSizeTextType="uniform"
        android:layout_marginTop="15dp"
        android:fontFamily="@font/nunito_sans"
        android:textAlignment="viewStart"
        android:layout_marginStart="40dp"
        android:text="Youtube"
        app:layout_constraintTop_toBottomOf="@id/emailtxt"
        app:layout_constraintEnd_toEndOf="parent"
        />

    <TextView
        android:layout_width="0dp"
        android:layout_height="0dp"
        android:id="@+id/youtube"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintHeight_percent=".05"
        android:autoSizeMaxTextSize="23dp"
        android:autoSizeMinTextSize="5dp"
        android:elevation="30dp"
        android:maxLines="1"
        app:layout_constraintWidth_percent=".7"
        android:layout_marginEnd="40dp"
        android:autoSizeTextType="uniform"
        android:fontFamily="@font/nunito_sans"
        android:textAlignment="viewStart"
        android:layout_marginStart="40dp"
        android:text="Nebula_Dev"
        app:layout_constraintTop_toBottomOf="@id/yttxt"
        app:layout_constraintEnd_toEndOf="parent"
        />


    <TextView
        android:layout_width="0dp"
        android:layout_height="0dp"
        android:id="@+id/gpStoretxt"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintHeight_percent=".05"
        android:autoSizeMaxTextSize="25dp"
        android:autoSizeMinTextSize="5dp"
        android:elevation="30dp"
        app:layout_constraintWidth_percent=".7"
        android:layout_marginEnd="40dp"
        android:autoSizeTextType="uniform"
        android:layout_marginTop="15dp"
        android:fontFamily="@font/nunito_sans"
        android:textAlignment="viewStart"
        android:layout_marginStart="40dp"
        android:text="Google Play"
        app:layout_constraintTop_toBottomOf="@id/youtube"
        app:layout_constraintEnd_toEndOf="parent"
        />

    <TextView
        android:layout_width="0dp"
        android:layout_height="0dp"
        android:id="@+id/gpStore"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintHeight_percent=".05"
        android:autoSizeMaxTextSize="23dp"
        android:autoSizeMinTextSize="5dp"
        android:elevation="30dp"
        android:maxLines="1"
        app:layout_constraintWidth_percent=".7"
        android:layout_marginEnd="40dp"
        android:autoSizeTextType="uniform"
        android:fontFamily="@font/nunito_sans"
        android:textAlignment="viewStart"
        android:layout_marginStart="40dp"
        android:text="Nebula_DEV"
        app:layout_constraintTop_toBottomOf="@id/gpStoretxt"
        app:layout_constraintEnd_toEndOf="parent"
        />








</androidx.constraintlayout.widget.ConstraintLayout>




