<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".SettingScreen"
    android:background="@drawable/gradient_blue_2"
    >



    <androidx.cardview.widget.CardView
        android:layout_width="0dp"
        android:id="@+id/cardTop"
        android:layout_height="0dp"
        app:layout_constraintTop_toTopOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintWidth_percent=".7"
        app:layout_constraintHeight_percent=".12"
        android:layout_marginTop="30dp"
        app:cardCornerRadius="100dp"
        android:backgroundTint="#FF72C6ED"
        android:alpha=".9"
        >

    </androidx.cardview.widget.CardView>

    <TextView
        android:layout_width="0dp"
        android:layout_height="0dp"
        app:layout_constraintTop_toTopOf="@id/cardTop"
        app:layout_constraintStart_toStartOf="@id/cardTop"
        app:layout_constraintEnd_toEndOf="@id/cardTop"
        app:layout_constraintBottom_toBottomOf="@id/cardTop"
        android:text="About"
        app:layout_constraintWidth_percent=".5"
        app:layout_constraintHeight_percent=".07"
        android:elevation="10dp"
        android:fontFamily="@font/nunito_sans"
        android:textColor="@color/white"
        android:textAlignment="center"
        android:autoSizeTextType="uniform"

        />


    <androidx.cardview.widget.CardView
        android:id="@+id/cardContain"
        android:layout_marginTop="45dp"
        android:layout_width="0dp"
        android:layout_height="0dp"
        app:cardCornerRadius="50dp"
        app:layout_constraintTop_toBottomOf="@id/cardTop"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintHeight_percent=".7"
        app:layout_constraintWidth_percent=".9"

        >

    </androidx.cardview.widget.CardView>







    <Button
        android:layout_width="55dp"
        android:layout_height="55dp"
        android:layout_marginLeft="30dp"
        android:id="@+id/backArrow"
        android:layout_marginTop="30dp"
        app:layout_constraintTop_toTopOf="@id/cardContain"
        app:layout_constraintStart_toStartOf="@id/cardContain"
        android:background="@drawable/back_arrow"
        app:layout_constraintWidth_percent=".25"
        app:layout_constraintHeight_percent=".07"
        android:alpha=".6"
        android:backgroundTint="@color/black"

        >

    </Button>



    <TextView
        android:layout_width="0dp"
        android:layout_height="0dp"
        android:id="@+id/aboutTxt"
        app:layout_constraintTop_toBottomOf="@id/backArrow"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintHeight_percent=".05"
        app:layout_constraintEnd_toEndOf="parent"
        android:autoSizeMaxTextSize="25dp"

        android:autoSizeMinTextSize="5dp"
        android:elevation="30dp"
        app:layout_constraintWidth_percent=".5"
        android:autoSizeTextType="uniform"
        android:textColor="@color/white"
        android:fontFamily="@font/nunito_sans_bold"
        android:background="@drawable/gradient_blue_2"
        app:layout_constraintBottom_toTopOf="@id/txtunder"

        android:textAlignment="center"
        android:text="Overview:"

        />
    <TextView
        android:layout_width="0dp"
        app:layout_constraintEnd_toEndOf="parent"
        android:layout_height="0dp"
        android:id="@+id/txtunder"
        app:layout_constraintTop_toBottomOf="@id/aboutTxt"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintHeight_percent=".15"
        android:autoSizeMaxTextSize="25dp"
        android:autoSizeMinTextSize="5dp"
        android:elevation="30dp"
        app:layout_constraintWidth_percent=".7"
        android:layout_marginEnd="40dp"
        android:autoSizeTextType="uniform"
        android:fontFamily="@font/nunito_sans"
        android:textAlignment="center"
        app:layout_constraintBottom_toTopOf="@id/txtPercent"
        android:layout_marginStart="40dp"
        android:text="Challenge your knowledge of the office to see how many questions you can get right in a row."

        />


    <TextView
        android:layout_width="0dp"
        app:layout_constraintEnd_toEndOf="parent"
        android:layout_height="0dp"
        android:id="@+id/txtPercent"
        app:layout_constraintTop_toBottomOf="@id/txtunder"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintHeight_percent=".05"
        android:autoSizeMaxTextSize="25dp"
        android:autoSizeMinTextSize="5dp"
        android:elevation="30dp"
        app:layout_constraintWidth_percent=".5"
        android:autoSizeTextType="uniform"
        android:textColor="@color/white"
        android:fontFamily="@font/nunito_sans_bold"
        android:background="@drawable/gradient_blue_2"
        android:textAlignment="center"
        android:text="Percent:"
        app:layout_constraintBottom_toTopOf="@id/txtPercentUnder"

        />
    <TextView
        android:layout_width="0dp"
        android:layout_height="0dp"
        android:id="@+id/txtPercentUnder"
        app:layout_constraintTop_toBottomOf="@id/txtPercent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintHeight_percent=".15"
        android:autoSizeMaxTextSize="25dp"
        android:autoSizeMinTextSize="5dp"

        android:elevation="30dp"
        app:layout_constraintBottom_toBottomOf="@id/cardContain"
        app:layout_constraintWidth_percent=".7"
        android:layout_marginEnd="40dp"
        android:layout_marginBottom="10dp"
        app:layout_constraintEnd_toEndOf="parent"

        android:autoSizeTextType="uniform"
        android:fontFamily="@font/nunito_sans"
        android:textAlignment="center"
        android:layout_marginStart="40dp"
        android:text="The percent metric is used to show where you stack up when compared with other players of the game."

        />












</androidx.constraintlayout.widget.ConstraintLayout>




