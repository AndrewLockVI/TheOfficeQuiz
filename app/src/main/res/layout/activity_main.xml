<?xml version="1.0" encoding="utf-8"?>


<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:gravity="center"
    android:orientation="vertical"
    android:background="@drawable/paperbackground"
    >


    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="0/0"
        android:translationX="145dp"
        android:translationY="10dp"
        android:textSize="30dp"
        android:id="@+id/txtScore"
        android:fontFamily="sans-serif-light"
        android:textColor="@color/grey_text"


        />

    <TextView
        android:layout_width="match_parent"
        android:layout_height="100dp"
        android:id="@+id/txtQuestion"
        android:text="@string/question_text"
        android:textSize="28dp"
        android:padding="15dp"
        android:gravity="center"
        android:translationY="10dp"
        android:fontFamily="sans-serif-condensed"
        android:textColor="@color/grey_text"



        />



    <LinearLayout
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical"
    android:gravity="center"
    android:translationY="0dp"
        >

        <Button
            android:id="@+id/answer_one"
            android:layout_width="330dp"
            android:layout_height="120dp"
            android:gravity="center"
            android:text="@string/button_one"
            android:textAllCaps="false"
            android:textSize="35dp"
            android:translationY="0dp"
            app:cornerRadius="10dp" />

        <View
            android:layout_width="10dp"
            android:layout_height="5dp"></View>

        <Button
            android:id="@+id/answer_two"
            android:layout_width="330dp"
            android:layout_height="120dp"
            android:gravity="center"
            android:text="@string/button_two"
            android:textSize="35dp"
            android:translationY="0dp"
            app:cornerRadius="10dp"
            android:textAllCaps="false"
            />

        <View
            android:layout_width="10dp"
            android:layout_height="5dp"></View>
        <Button
            android:id="@+id/answer_three"
            android:layout_width="330dp"
            android:layout_height="120dp"
            android:gravity="center"
            android:text="@string/button_three"
            android:textSize="35dp"
            android:translationY="0dp"
            android:textAllCaps="false"
            app:cornerRadius="10dp" />
        <View
            android:layout_width="10dp"
            android:layout_height="5dp"></View>
        <Button
            android:id="@+id/answer_four"
            android:layout_width="330dp"
            android:layout_height="120dp"
            android:gravity="center"
            android:text="@string/button_four"
            android:textSize="35dp"
            android:translationY="0dp"
            app:cornerRadius="10dp"
            android:textAllCaps="false"
            />
    </LinearLayout>




</LinearLayout>