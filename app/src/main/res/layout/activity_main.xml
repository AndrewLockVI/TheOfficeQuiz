<?xml version="1.0" encoding="utf-8"?>

<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:gravity="center"
    android:orientation="vertical"
    android:background="@drawable/gradient_blue_2"
    >



    <androidx.cardview.widget.CardView
        android:layout_width="0dp"
        android:id="@+id/blurry"
        android:layout_height="0dp"
        app:layout_constraintTop_toTopOf="@id/answer_one"
        app:layout_constraintBottom_toBottomOf="@id/answer_four"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:cardCornerRadius="30dp"
        android:elevation="1dp"
        app:cardBackgroundColor="@color/white"
        app:layout_constraintWidth_percent=".9"
        app:layout_constraintHeight_percent=".65"



        />

    <TextView
        app:layout_constraintTop_toTopOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        android:layout_width="0dp"
        android:layout_height="0dp"
        android:text="0"
        android:autoSizeTextType="uniform"
        android:id="@+id/txtScore"
        android:fontFamily="sans-serif-light"
        android:textColor="@color/white"
        android:paddingEnd="10dp"
        android:paddingTop="10dp"
        app:layout_constraintHeight_percent=".07"
        app:layout_constraintWidth_percent=".15"


        />

    <TextView
        android:layout_width="0dp"
        android:layout_height="0dp"
        android:id="@+id/txtQuestion"
        android:text="@string/question_text"
        android:textSize="35sp"
        android:maxLines="2"
        android:padding="15dp"
        android:gravity="center"
        app:layout_constraintBottom_toTopOf="@id/answer_one"
        app:layout_constraintWidth_percent=".9"
        app:layout_constraintHeight_percent=".15"
        app:layout_constraintTop_toBottomOf="@id/txtScore"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        android:fontFamily="sans-serif-condensed"
        android:textColor="@color/white"



        />




        <Button
            app:layout_constraintTop_toBottomOf="@id/txtQuestion"
            app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintBottom_toTopOf="@id/answer_two"
            android:id="@+id/answer_one"
            android:layout_width="0dp"
            android:background="@drawable/button_outline"
            android:textColor="@color/white"
            app:layout_constraintHeight_percent=".15"
            app:layout_constraintWidth_percent=".85"
            android:layout_height="0dp"
            android:gravity="center"
            android:text="@string/button_one"
            android:textAllCaps="false"
            android:layout_marginTop="50dp"
            android:textSize="35dp"
            android:translationY="0dp"
            app:cornerRadius="10dp" />



        <Button
            app:layout_constraintTop_toBottomOf="@id/answer_one"
            app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintBottom_toTopOf="@id/answer_three"
            android:id="@+id/answer_two"
            android:background="@drawable/button_outline"
            android:textColor="@color/white"
            android:layout_width="0dp"
            app:layout_constraintHeight_percent=".15"
            app:layout_constraintWidth_percent=".85"
            android:layout_height="0dp"
            android:gravity="center"
            android:text="@string/button_two"
            android:textSize="35dp"
            android:translationY="0dp"
            app:cornerRadius="10dp"
            android:textAllCaps="false"
            />


        <Button
            app:layout_constraintTop_toBottomOf="@id/answer_two"
            app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintBottom_toTopOf="@id/answer_four"
            android:id="@+id/answer_three"
            android:background="@drawable/button_outline"
            android:textColor="@color/white"
            android:layout_width="0dp"
            app:layout_constraintHeight_percent=".15"
            app:layout_constraintWidth_percent=".85"
            android:layout_height="0dp"
            android:gravity="center"
            android:text="@string/button_three"
            android:textSize="35dp"
            android:translationY="0dp"
            android:textAllCaps="false"
            app:cornerRadius="10dp" />

        <Button
            app:layout_constraintTop_toBottomOf="@id/answer_three"
            app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintStart_toStartOf="parent"
            android:id="@+id/answer_four"
            android:layout_width="0dp"
            app:layout_constraintHeight_percent=".15"
            app:layout_constraintWidth_percent=".85"
            android:layout_height="0dp"
            android:background="@drawable/button_outline"
            android:textColor="@color/white"
            android:gravity="center"
            android:text="@string/button_four"
            android:textSize="35dp"
            android:translationY="0dp"
            app:cornerRadius="10dp"
            android:textAllCaps="false"
            app:layout_constraintBottom_toTopOf="@id/spaceView"

            />

    <View
        android:layout_width="0dp"
        android:id="@+id/spaceView"
        android:layout_height="0dp"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintHeight_percent=".1"
        >



    </View>






</androidx.constraintlayout.widget.ConstraintLayout>