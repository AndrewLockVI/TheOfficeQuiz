<?xml version="1.0" encoding="utf-8"?>
<manifest xmlns:android="http://schemas.android.com/apk/res/android"
    package="com.nebuladev.quizgame">




    <supports-screens
        android:largeScreens="true"
        android:normalScreens="true"
        android:smallScreens="true"
        android:xlargeScreens="true" />

    <application


        android:allowBackup="true"
        android:icon="@mipmap/ic_launcher"
        android:label="@string/app_name"
        android:roundIcon="@mipmap/ic_launcher_round"
        android:supportsRtl="true"
        android:theme="@style/Theme.QuizGame">
        <activity
            android:name=".credits_screen"
            android:exported="false" />
        <activity
            android:name=".Contact_screen"
            android:exported="false" />
        <activity
            android:name=".About_Screen"
            android:exported="false" />
        <activity
            android:name=".SettingScreen"
            android:exported="false" />
        <activity
            android:name=".EndScreen"
            android:exported="false" />
        <activity
            android:name=".LandingPage"
            android:exported="true">
            <intent-filter>
                <action android:name="android.intent.action.MAIN" />

                <category android:name="android.intent.category.LAUNCHER" />
            </intent-filter>
        </activity>
        <activity
            android:name=".MainActivity"
            android:exported="false" />

        <meta-data
            android:name="preloaded_fonts"
            android:resource="@array/preloaded_fonts"

            />

        <meta-data
            android:name="com.google.android.gms.ads.APPLICATION_ID"
            android:value="ca-app-pub-6659094757182534~3724008421"/>

        <service android:enabled="true" android:name=".BackgroundSoundService" />
    </application>
</manifest>